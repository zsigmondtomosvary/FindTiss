<html>

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<p id="notice"><%= notice %></p>

<h1>Favorite People</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Firstname", :sort => "firstname" %></th>
      <th><%= link_to "Lastname", :sort => "lastname" %></th>
      <th>Prefixtitle</th>
      <th><%= link_to "Created", :sort => "created_at" %></th>
      <th>Details</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_people.each do |favorite_person| %>
      <tr>
        <td><%= favorite_person.firstname %></td>
        <td><%= favorite_person.lastname %></td>
        <td><%= favorite_person.title %></td>
        <td><%= favorite_person.created_at %></td>
        <td><%= link_to 'Show', favorite_person %></td>
        <td><%= link_to 'Destroy', favorite_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', favorites_path , class: "btn btn-lg btn-default"%>

</html>