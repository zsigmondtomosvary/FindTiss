<html>

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<p id="notice"><%= notice %></p>

<h1>Project Details</h1>

<div class="row">
  <div class="col-xs-6">
  <p>
    <h3>Title:</h3>
    <%= @favorite_project.title %>
  </p>

  <p>
    <h3>Form:</h3>
    <%= @favorite_project.form %>
  </p>

    <% if @favorite_project.abstract != "" %>
      <p>
        <h3>Abstract:</h3>
        <%= @favorite_project.abstract %>
      </p>
    <% end %>

  <p>
    <i><%= link_to "Check out the official website",@favorite_project.url %></i>
  </p>
  </div>
</div>

</br>

<%= link_to 'Back to favorite projects', favorite_projects_path , class: "btn btn-lg btn-default"%>
</html>